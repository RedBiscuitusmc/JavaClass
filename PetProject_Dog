public class Dog {
    // Instance variables
    private String name;
    private int age;
    private double weight;
    private int dogSpaceNumber;
    private boolean grooming;
    private double dogWeight; // New attribute

    // Constructor
    public Dog(String initName, int initDogSpaceNumber, boolean initGrooming, double initDogWeight) {
        name = initName;
        age = 0;
        weight = 0.0;
        dogSpaceNumber = initDogSpaceNumber;
        grooming = initGrooming;
        dogWeight = initDogWeight;
    }

    // Getter and Setter methods for name
    // (existing getters and setters are retained)

    public double getDogWeight() {
        return dogWeight;
    }

    public void setDogWeight(double newDogWeight) {
        dogWeight = newDogWeight;
    }

    public int getDogSpaceNumber() {
        return dogSpaceNumber;
    }

    public void setDogSpaceNumber(int newDogSpaceNumber) {
        dogSpaceNumber = newDogSpaceNumber;
    }

    public boolean getGrooming() {
        return grooming;
    }

    public void setGrooming(boolean newGrooming) {
        grooming = newGrooming;
    }

    // (existing methods are retained)

    // Method to get dog data
    public String getData() {
        String data = "Name: " + name;
        data += "\nAge: " + age;
        data += "\nWeight: " + weight;
        data += "\nDog Space Number: " + dogSpaceNumber;
        data += "\nGrooming: " + (grooming ? "Yes" : "No");
        data += "\nDog Weight: " + dogWeight;
        return data;
    }
}
